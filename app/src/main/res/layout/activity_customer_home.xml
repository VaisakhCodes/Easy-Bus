<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cushomepagebg"
    tools:context=".CustomerHome" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Home"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnearbystops"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/customerhomebtn"
        android:layout_marginTop="210dp"
        android:text="Nearby Stops" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btsearchbusses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/customerhomebtn"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:text="Search Bus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btreserve"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/customerhomebtn"
        android:layout_marginTop="20dp"
        android:text="Reservation" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnearbyplace"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="220dp"
        android:background="@drawable/customerhomebtn"
        android:layout_marginTop="20dp"
        android:text="Nearby Places" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btcomplaint"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/customerhomebtn"
        android:layout_marginTop="20dp"
        android:text="Complaints" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btlogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/customerhomebtn"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:text="Logout" />


</LinearLayout>
